{
  "name": "monk-irc",
  "version": "0.1.0",
  "description": "IRC Protocol Server for monk-api integration - Bridge between IRC protocol and HTTP API",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "monk-irc": "./bin/monk-irc"
  },
  "scripts": {
    "start": "node dist/index.js",
    "start:dev": "tsx watch src/index.ts",
    "compile": "tsc",
    "spec": "scripts/spec.sh",
    "spec:ts": "scripts/spec-ts.sh",
    "test": "npm run spec",
    "dev": "npm run start:dev"
  },
  "keywords": [
    "irc",
    "protocol",
    "server",
    "typescript",
    "monk-api"
  ],
  "author": "Ian Zepp",
  "license": "MIT",
  "dependencies": {},
  "devDependencies": {
    "@types/node": "^22",
    "tsx": "^4.19.2",
    "typescript": "^5.6.3",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
