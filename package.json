{
  "name": "monk-irc",
  "version": "1.0.0",
  "description": "IRC Protocol Server for monk-api integration - Bridge between IRC protocol and HTTP API",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "monk-irc": "./bin/monk-irc"
  },
  "scripts": {
    "start": "node -r dotenv/config dist/index.js",
    "start:dev": "tsx watch -r dotenv/config src/index.ts",
    "start:prod": "pm2 start ecosystem.config.cjs --env production",
    "start:bg": "pm2 start ecosystem.config.cjs",
    "stop": "pm2 stop monk-irc",
    "restart": "pm2 restart monk-irc",
    "logs": "pm2 logs monk-irc",
    "status": "pm2 status",
    "compile": "tsc",
    "spec": "scripts/spec.sh",
    "spec:ts": "scripts/spec-ts.sh",
    "test": "npm run spec",
    "dev": "npm run start:dev"
  },
  "keywords": [
    "irc",
    "protocol",
    "server",
    "typescript",
    "monk-api"
  ],
  "author": "Ian Zepp",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^22",
    "dotenv": "^17.2.3",
    "pm2": "^5.4.3",
    "tsx": "^4.19.2",
    "typescript": "^5.6.3",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
