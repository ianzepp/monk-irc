{
  "type": "object",
  "title": "IRC Channels",
  "required": ["name"],
  "properties": {
    "name": {
      "type": "string",
      "pattern": "^#[a-zA-Z0-9_\\-]+$",
      "minLength": 2,
      "maxLength": 50,
      "description": "Channel name (indexed for uniqueness)"
    },
    "topic": {
      "type": "string",
      "maxLength": 500,
      "default": "",
      "description": "Channel topic"
    },
    "topic_set_by": {
      "type": "string",
      "description": "Nickname who set the topic"
    },
    "topic_set_at": {
      "type": "string",
      "format": "date-time",
      "description": "When topic was set"
    },
    "modes": {
      "type": "string",
      "default": "+nt",
      "description": "Channel modes"
    },
    "created_at": {
      "type": "string",
      "format": "date-time",
      "description": "Channel creation timestamp"
    }
  },
  "additionalProperties": false,
  "description": "IRC channel definitions and metadata"
}
