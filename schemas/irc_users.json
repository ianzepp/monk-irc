{
  "type": "object",
  "title": "IRC Users",
  "required": ["nickname", "username", "realname"],
  "properties": {
    "nickname": {
      "type": "string",
      "minLength": 1,
      "maxLength": 30,
      "pattern": "^[a-zA-Z][a-zA-Z0-9_\\-\\[\\]\\{\\}\\\\`\\|]*$",
      "description": "Current nickname (indexed for uniqueness)"
    },
    "username": {
      "type": "string",
      "minLength": 1,
      "maxLength": 100,
      "description": "IRC username (~user)"
    },
    "realname": {
      "type": "string",
      "minLength": 1,
      "maxLength": 255,
      "description": "Real name or description"
    },
    "hostname": {
      "type": "string",
      "description": "User hostname or IP"
    },
    "modes": {
      "type": "string",
      "default": "",
      "description": "User modes: +iw, etc."
    },
    "registered_at": {
      "type": "string",
      "format": "date-time",
      "description": "Registration timestamp"
    },
    "last_seen": {
      "type": "string",
      "format": "date-time",
      "description": "Last activity timestamp"
    }
  },
  "additionalProperties": false,
  "description": "IRC user profiles and registration information"
}
